{
  "extends": "@tsconfig/node12/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./src",
  "paths": {
      "@common": ["./common"],
      "@common/*": ["./common/*"]
  }
  },
  "compileOnSave": true,
  "exclude": [
    "./src/client"
  ],
  "include": [
    "./src/server",
    "./src/common"
  ]
}
